<% layout('layout') -%>

<div class="container">
	<div class="row">
		<div class="col-lg-6 col-md-offset-3">
			<% if (message.length > 0) { %>
				<div class="alert alert-success alert-dismissible">
					<button type="button" class="close" data-dismmiss="alert" aria-label>
						<span aria-hidden="true">&times;</span>
					</button>
					<%= message %>
				</div>
			<% } else if (error.length > 0) { %>
				<div class="alert alert-danger alert-dismissible">
					<button type="button" class="close" data-dismmiss="alert" aria-label>
						<span aria-hidden="true">&times;</span>
					</button>
					<%= error %>
				</div>
			<% } %>
			<h1>Edit Profile</h1>
			<form method="post" action="/settings/edit-profile">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="form-group">
							<label="name">Name: </label>
							<input type="text" class="form-control" value="<%= user.profile.name %>" name="name">
						</div>
						<div class="form-group">
							<label="name">Address: </label>
							<input type="text" class="form-control" value="<%= user.address || 'You have no address' %>" name="address">
						</div>
						<button type="submit" class="btn btn-success">Save</button>
					</div>
				</div>
			</form>
			<% if (!user.facebook) { %>
				<br>
				<h1>Change Password</h1>
				<form method="post" action="/settings/change-password">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="form-group">
								<label="name">Old Password: </label>
								<input type="password" class="form-control" name="old_password">
							</div>
							<div class="form-group">
								<label="name">New Password: </label>
								<input type="password" class="form-control" name="new_password">
							</div>
							<button type="submit" class="btn btn-success">Save</button>
						</div>
					</div>
				</form>
			<% } %>
			<% if (!user.isAdmin) { %>
				<br>
				<h1>Set Admin</h1>
				<form method="post" action="/settings/set-admin">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="form-group">
								<label="name">Invite: </label>
								<input type="password" class="form-control" name="invite">
							</div>
							<button type="submit" class="btn btn-success">Set Admin</button>
						</div>
					</div>
				</form>
			<% } %>
			<br>
			<h1>Delete Account</h1>
			<form method="post" action="/settings/delete-account">
				<div class="panel panel-default">
					<div class="panel-body">
						<button type="submit" class="btn btn-warning">Delete Account</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
