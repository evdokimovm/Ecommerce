<% layout('layout') -%>

<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4">
			<img src="<%= user.profile.picture %>" alt="" class="img-circle img-responsive img-center">
			<br>
			<p>Name: <%= user.profile.name %></p>
			<p>Email: <%= user.email %></p>

			<% if (user.address === "" || typeof user.address === 'undefined') { %>
				<p>Address: <span style="color: #c0392b; font-weight: bold;">You have no address</span></p>
			<% } else { %>
				<p>Address: <%= user.address %></p>
			<% } %>

			<% if (!user.verified) { %>
				<p><span style="color: #c0392b; font-weight: bold;">Not Verified</span></p>
			<% } else { %>
				<p><span style="color: #5cb85c; font-weight: bold;">Verified</span></p>
			<% } %>

			<% if (!user.isAdmin) { %>
				<p><span style="color: #c0392b; font-weight: bold;">Not Admin</span></p>
			<% } else { %>
				<p><span style="color: #5cb85c; font-weight: bold;">Admin</span></p>
			<% } %>

			<a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
		</div>
		<div class="col-md-6">
			<% if (success.length > 0) { %>
				<div class="alert alert-success alert-dismissible">
					<button type="button" class="close" data-dismmiss="alert" aria-label>
						<span aria-hidden="true">&times;</span>
					</button>
					<%= success %>
				</div>
			<% } else if (error.length > 0) { %>
				<div class="alert alert-danger alert-dismissible">
					<button type="button" class="close" data-dismmiss="alert" aria-label>
						<span aria-hidden="true">&times;</span>
					</button>
					<%= error %>
				</div>
			<% } %>
			<h2 class="text-center">History</h2>
			<table class="table table-striped sticky-header">
				<thread>
					<tr>
						<th>Item's Name</th>
						<th>Paid</th>
					</tr>
				</thread>
				<tbody>
					<% for(var i = 0; i < user.history.length; i++) { %>
						<tr>
							<td><%= user.history[i].item.name %></td>
							<td><%= user.history[i].paid %></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
